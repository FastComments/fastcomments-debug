{
  "manifest_version": 2,
  "name": "FastComments Debugger",
  "version": "1.0.0",
  "description": "A tool to help you debug your FastComments installation.",
  "icons": {
    "16": "assets/icons/favicon.png",
    "48": "assets/icons/favicon.png",
    "128": "assets/icons/favicon.png"
  },
  "browser_action": {
    "default_icon": "assets/icons/favicon.png",
    "default_popup": "popup/index.html",
    "default_title": "FastComments Debugger"
  },
  "content_scripts": [
    {
      "js": [
        "content/index.js"
      ],
      "matches": ["<all_urls>"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    "assets/icons/*.png"
  ],
  "permissions": [
    "*://*/*"
  ]
}
